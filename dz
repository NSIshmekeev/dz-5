#include<iostream>
#include<ctime>
using namespace std;
void print_matrix(int** array,int n,int m) {
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			cout << array[i][j] << " ";
		} 
		cout << endl;
	}
}
void random_matrix(int** array, int n, int m) {
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			array[i][j] = rand() % 15 + 10;
		}
	}
}
void dz1(int** array, int n, int m) {
	srand(time(0));
	int* x = new int[m];
	int j = rand() % n;
	int c = rand() % n;
	for (int i = 0; i < m; i++) {
		x[i] = array[j][i];
		array[j][i] = array[c][i];
		array[c][i] = x[i];

	}
	print_matrix(array, n, m);

}
void dz2(int** array, int n, int m) {
	int count = 0;
	int x = rand() % 15 + 10;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			if (array[i][j] == x) count++;
		}
	}
	cout << endl<< x << endl;
	cout << count;
	
}
void dz3(int** array,int n,int m) {
	for (int j = 0; j < m; j++) {
		int sum = 0;
		for (int i = 0; i < n; i++) {
			sum += array[i][j];
		}
		cout << sum << " ";
	}
}
int main() {
	srand(time(0));
	int n, m;
	cin >> n >> m;
	int** array =new int* [n];
	for (int i = 0; i < n; i++) {
		array[i] = new int[m];
	}
	random_matrix(array, n, m);
	print_matrix(array, n, m);
	cout << endl;
	dz1(array, n, m);
	cout << endl;
	dz2(array, n, m);
    cout << endl;
	dz3(array, n, m);
	system("pause");
	return 0;
}
